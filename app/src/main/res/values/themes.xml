<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TelegramM" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/tg_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/tg_background</item>
        <item name="android:textColor">@color/tg_text_primary</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- === GOOGLE SANS === -->

    <!-- Regular -->
    <style name="Text.GoogleSans" parent="android:Widget.TextView">
        <item name="fontFamily">@font/family_google_sans</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Medium -->
    <style name="Text.GoogleSans.Medium">
        <item name="fontFamily">@font/family_google_sans</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Bold -->
    <style name="Text.GoogleSans.Bold">
        <item name="fontFamily">@font/family_google_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <!-- === UNBOUNDED === -->

    <!-- Regular -->
    <style name="Text.Unbounded" parent="android:Widget.TextView">
        <item name="fontFamily">@font/family_unbounded</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Light -->
    <style name="Text.Unbounded.Light">
        <item name="fontFamily">@font/family_unbounded</item>
        <item name="android:textFontWeight">300</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Bold -->
    <style name="Text.Unbounded.Bold">
        <item name="fontFamily">@font/family_unbounded</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Black -->
    <style name="Text.Unbounded.Black">
        <item name="fontFamily">@font/family_unbounded</item>
        <item name="android:textFontWeight">900</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TgHeader" parent="Text.Unbounded.Bold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TgSpeedTextVoiceHeader" parent="Widget.Material3.Button.TextButton">
        <item name="fontFamily">@font/family_google_sans</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TgTitle" parent="Text.GoogleSans.Bold">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onSurfaceColor</item>
    </style>

    <style name="TgSubtitle" parent="Text.GoogleSans">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/onSurfaceColor</item>
    </style>

    <style name="BottomNavText.Inactive" parent="Text.GoogleSans">
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="BottomNavText.Active" parent="Text.GoogleSans.Bold">
        <item name="android:textSize">12sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.TelegramM.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />
    <style name="Theme.TelegramM.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Theme.TelegramM.ChatBottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="enableEdgeToEdge">true</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.TelegramM.FullscreenDialog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>
