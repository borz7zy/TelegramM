<?xml version="1.0" encoding="utf-8"?>
<eightbitlab.com.blurview.BlurView android:id="@+id/system_blur_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_horizontal|center_vertical|center"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/image_gift"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:src="@drawable/bg_badge"/>

        <TextView
            android:id="@+id/gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textSize="18sp"
            android:textColor="#90FFFFFF"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Telegram premium" />

        <TextView
            android:id="@+id/tv_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:textSize="16sp"
            android:textColor="#90FFFFFF"
            android:gravity="center"
            android:visibility="visible"
            tools:visibility="visible"
            tools:text="Юрий говнокод подарил Вам Telegram Premium на 12 месяцев! бла бла бла бла бла"/>

        <TextView
            android:id="@+id/gift_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:paddingTop="8dp"
            android:textColor="#90FFFFFF"
            android:gravity="center"
            tools:text="Пук пук среньк комментарий нахуй"/>

        <LinearLayout
            android:id="@+id/buttons_action"
            android:paddingTop="8dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/gift_action_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:text="Открыть подарок"/>

        </LinearLayout>
    </LinearLayout>

</eightbitlab.com.blurview.BlurView>
