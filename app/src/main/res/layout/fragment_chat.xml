<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tg_background"
    tools:context=".ui.chat.ChatFragment">

    <eightbitlab.com.blurview.BlurTarget
        android:id="@+id/blur_target"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.borz7zy.telegramm.ui.widget.SpringRecyclerView
            android:id="@+id/rv_messages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="60dp"
            android:paddingBottom="80dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:stackFromEnd="true"
            tools:listitem="@layout/item_message_in" />

    </eightbitlab.com.blurview.BlurTarget>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/header_blur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:blurOverlayColor="@color/tg_background_t">

        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                app:tint="@android:color/white" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/chat_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_badge"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/TgTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="Имя собеседника" />

                <TextView
                    android:id="@+id/tv_subtitle"
                    style="@style/TgSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="участники: 1.4к (3 в сети)" />
            </LinearLayout>

        </LinearLayout>


    </eightbitlab.com.blurview.BlurView>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/input_blur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:blurOverlayColor="@color/tg_background_t">

        <LinearLayout
            android:id="@+id/input_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <include
                android:id="@+id/typing_bottom"
                layout="@layout/item_typing"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_attach"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:src="@drawable/ic_attach_outline"
                    app:tint="@android:color/white" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#502A2A2A"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="24dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="12dp" >

                        <EditText
                            android:id="@+id/et_message"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toStartOf="@id/btnClear"
                            android:layout_marginStart="8dp"
                            android:background="@null"
                            android:fontFamily="@font/family_google_sans"
                            android:includeFontPadding="false"
                            android:hint="Message"
                            android:textColor="@color/white"
                            android:textColorHint="#9E9E9E"
                            android:textSize="16sp"
                            android:singleLine="true"
                            android:inputType="text"
                            android:visibility="visible"/>

                        <com.masoudss.lib.WaveformSeekBar
                            android:id="@+id/wave_record"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toStartOf="@id/btnClear"
                            android:layout_marginStart="8dp"
                            android:visibility="visible"
                            android:background="@null"
                            app:wave_gravity="center"
                            app:wave_width="3dp"
                            app:wave_gap="2dp"
                            app:wave_min_height="2dp"
                            app:wave_visible_progress="50"
                            app:wave_progress_color="@color/red_call"
                            app:wave_background_color="@color/white"
                            app:marker_width="1dp" />

                        <ImageView
                            android:id="@+id/btnClear"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_sticker_smile_outline"
                            android:visibility="visible"
                            app:tint="@color/white" />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
                <ImageView
                    android:id="@+id/btn_send"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:src="@drawable/ic_send"
                    app:tint="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

    </eightbitlab.com.blurview.BlurView>

</RelativeLayout>
